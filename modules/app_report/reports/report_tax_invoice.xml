<?xml version="1.0" encoding="utf-8"?>
<odoo>

 
<template id="report_tax_invoice">
	
	    <div class="header">
            <div class="row">
                <div class="col-3 bm-2 text-left">
				  <t t-foreach="docs" t-as="o">
					
					<strong style="font-size:15px"><t t-esc="o.company_id.name"/></strong><br></br>
					<p class ="_comp_add" style="font-size:15px">
					<t t-esc="o.company_id.street"/><br></br>
					<t t-esc="o.company_id.street2"/><br></br>
					<t t-esc="o.company_id.city">,</t>
					<t t-esc="o.company_id.state_id.name"/><br></br>
					<t t-esc="o.company_id.country_id.name"/>
					<t t-esc="o.company_id.zip"/><br></br>
					<strong style="font-size:15px">Tax ID :</strong> <t t-esc="o.company_id.vat"/>
					</p>
					
					</t>
					
                </div>
                
                <div class="col-6 bm-2 text-right">
					<br></br><br></br>
                    <p style="text-align:center;">
					<!--<t t-foreach="docs" t-as="o">
					<img t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 125px;max-width: 250px"/>
					</t>-->
						<img t-att-src="'app_report/static/description/crea-icon.jpg'" style="max-height: 150px;max-width: 250px"/>
					</p>
					
                </div>
                <br></br><br></br>
                <div class="col-3 bm-2 text-right">
					<t t-foreach="docs" t-as="o">
					<p class ="_local_lang_add" style="font-size:15px">
					     <t t-esc="o.company_id.address_local_lang"/>
						 <br></br>
						 <strong style="font-size:15px">เลขประจำตัวผู้เสียภาษี :</strong> <t t-esc="o.company_id.vat"/>
					</p>	 
					</t>

                </div>
			</div>
			<br></br>
		</div>
			
			
			<!--<div class = "row">
				<div class="col-12 bm-2 text-center">
					<center><h6 style="font-size:15px">ใบกำกับภาษี / ใบเสร็จรับเงินอย่างเป็นทางการ</h6></center>
					
                    <center><h6 style="font-size:15px"><strong>TAX INVOICE / OFFICIAL RECEIPT</strong></h6></center>
					
                </div>
			</div>-->
				
	<br></br>				 
	<t t-call="web.html_container">
		<t t-foreach="docs" t-as="o">
			<t t-call="web.external_layout">
			<div class="page">
                    <div class="oe_structure" />
	                  <div class="text-center">
	                        
					<center><h6 style="font-size:19px">ใบกำกับภาษี / ใบเสร็จรับเงินอย่างเป็นทางการ</h6></center>
					
                    <center><h6 style="font-size:19px"><strong>TAX INVOICE / OFFICIAL RECEIPT</strong></h6></center>
                      <br></br>   
                       </div>
					
		    </div>			   

    <div class="page">
           <div class="row mt32 mb32">
									<!--<div class="col-xs-6">
										<strong>Name / Address</strong> <t t-esc="o.partner_id"/>
									</div>-->
									<div class="col-3 bm-2">
									<strong style="font-size:15px">ชื่อ / ที่อยู่ </strong>
									<br></br>
									    <strong style="font-size:15px">Name / Address :</strong>
										
										<t t-esc="o.partner_id" t-options='{"widget": "contact", "fields": [ "name","address"], "no_marker": True, "phone_icons": True}'/>
										
                                                   

		                            </div>

                                    <div class="col-9 bm-2 text-right" >
									    
										<strong style="font-size:15px">ไม่ / No :</strong> <t t-esc="o.number"/>
									</div>
                                </div>
					</div>
					
					<div class="page">
								<div class="row mt32 mb32">
									<div class="col-3 bm-2 "  >
									    <strong style="font-size:15px">เลขประจำตัวผู้เสียภาษี</strong>
										 <t t-esc="o.partner_id.vat" class="m-0 text-left"/>
										<br></br>
										<strong style="font-size:15px">Tax ID No.</strong>
									</div>
                                    <br></br>
									<div class="col-9 bm-2 text-right"  >
									<span>
										<strong style="font-size:15px">วันที่ / Date :</strong>
										<t t-esc="o.date_invoice" class="m-0 text-right"/>
									</span>	
									</div>

								</div>
					</div>

					
					<br></br>

                    <div class = "page">
						<div >
							<table border="1" class="table table-condensed" >
								<thead>
										<tr>
											    <!--<th style="border: 1px solid black" class="text-center">No. </th>-->
												<th style="border: 1px solid black" class="text-center">สินค้า <br></br>Product</th>
												<th style="border: 1px solid black" class="text-center">คำอธิบาย <br></br>Description </th>
												<th style="border: 1px solid black" class="text-center">ปริมาณ <br></br>Quantity</th>
												<th style="border: 1px solid black" class="text-center">ราคาต่อหน่วย <br></br>Unit Price </th>
												<th style="border: 1px solid black" class="text-center">จำนวน <br></br>Amount </th>
										</tr>
								</thead>	
							<tbody>
								<tr t-foreach="o.invoice_line_ids" t-as="line">
									<!--<td style="border: 1px solid black"><span t-field="       	"/></td>-->
									<td style="border: 0px solid black"><span t-field="line.product_id"/></td>
									<td style="border: 0px solid black"><span t-field="line.name"/></td>
									<td style="border: 0px solid black"><span t-field="line.quantity"/></td>
									<td style="border: 0px solid black"><span t-field="line.price_unit"/></td>
									<td style="border: 0px solid black"><span t-field="line.price_subtotal"/></td>
								</tr>
							</tbody>
							</table>
						</div>
					</div>
				<div class = "row">
				<div class="col-12 bm-2 text-left">
					<strong style="font-size:14px">Ref::Order No.</strong> <t t-esc="o.channel_order_number"/>
					
                </div>
				</div>
				<div class="clearfix">
					<div id="total" class="row">
						<div t-attf-class="#{'col-5' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
							<table class="table table-sm">
								<tr class="border-black o_price_subtotal" style="font-size:15px">
									<td><strong>ผลรวมทั้งสิ้น / Grand Total</strong></td>
									<td class="text-right">
										<span t-field="o.grand_total"/>
									</td>
								</tr>
								    
								<tr class="border-black o_calculated_discount" style="font-size:15px">
								<td><strong>ส่วนลด / Discount</strong></td>
								<td class="text-right">
									<span t-field="o.calculated_discount"/>
								</td>
								</tr>

								<tr class="border-black o_total_baht_excl_VAT" style="font-size:15px">
								<td><strong>รวมบาทไม่รวม ภาษีมูลค่าเพิ่ม / Total Baht Excl. Vat</strong></td>
								<td class="text-right">
									<span t-field="o.total_baht_excl_VAT"/>
								</td>	
								</tr>
								<!--<tr class="border-black o_discount_subtotal">
									<td><strong>รวมบาทไม่รวม ภาษีมูลค่าเพิ่ม / <br></br>Total Baht Excl. VAT</strong></td>
									<td class="text-right">
										<span t-field="line.price_subtotal - line.discount"/>
									</td>
								</tr>-->

								<tr class="border-black o_amount_tax" style="font-size:15px">
									<td><strong>ภาษีมูลค่าเพิ่ม 7% / VAT 7%</strong></td>
									<td class="text-right">
										<span t-field="o.vat"/>
									</td>
								</tr>


								<tr class="border-black o_total_baht_incl_VAT" style="font-size:15px">
									<td><strong>รวมบาท ภาษีมูลค่าเพิ่ม / Total Baht Incl. VAT</strong></td>
									<td class="text-right">
										<span t-field="o.total_baht_incl_VAT"/>
									</td>
								</tr>

							</table>
						</div>
					</div>
				</div>

				<div class="footer">
                    <div class="text-right" style="border-top: 1px solid black;">        
                        <small>
                            <span>Page</span>
                            <span class="page" /> of <span class="topage" />
                        </small>
                    </div>
                </div>     
				
			</t>
		</t>

	</t>
</template>




</odoo>
